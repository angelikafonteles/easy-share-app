@model EasyShareApp.Models.Document

@{ ViewData["Title"] = "Upload"; }

<h2>Upload</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Upload" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <small class="form-text text-muted">opcional</small>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstantExpiration" class="control-label"></label>
                <input asp-for="InstantExpiration" class="form-control" />
                <small class="form-text text-muted">Data limite: até 3 dias</small>
                <span asp-validation-for="InstantExpiration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attachment" class="control-label"></label>
                <input asp-for="File" class="form-control-file" accept=".pdf,.jpeg,.jpg,.png,.zip" type="file" />
                <small class="form-text text-muted">Arquivos permitidos: pdf, jpeg, jpg, png, zip</small>
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Upload" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Início</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
