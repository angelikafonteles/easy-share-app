@model EasyShareApp.Models.Document

@{ ViewData["Title"] = "Edit"; }

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm())
        {
            <div class="modal-header">
                <h4 class="modal-title">Editar</h4>
                <a asp-action="MenuList" class="close" asp-route-id="@Model.RegisterId">
                    <span aria-hidden="true">x</span><span></span>
                </a>
            </div>

            <div class="modal-body">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <div class="col-md-10">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label asp-for="InstantExpiration" class="control-label"></label>
                            <input asp-for="InstantExpiration" class="form-control" type="datetime-local"/>
                            <span asp-validation-for="InstantExpiration" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Salvar" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
         }
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}