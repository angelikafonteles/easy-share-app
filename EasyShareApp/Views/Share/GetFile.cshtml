@model EasyShareApp.Models.Authenticator

@{ ViewData["Title"] = "GetFile"; }

<h2>Shared Drive</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetFile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <img src="~/images/key-hole.png" style="height: 25px; width: 25px; margin: 0px 5px;" ALIGN="left" />
                <label asp-for="Key" class="control-label"></label>
                <input asp-for="Key" class="form-control" />
                <span asp-validation-for="Key" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <img src="~/images/door-key.png" style="height: 25px; width: 25px; margin: 0px 5px;" ALIGN="left" />
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" autocomplete="off" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
