@model EasyShareApp.Models.ViewModels.ErrorViewModel

@{ ViewData["Title"] = "CustomError"; }

<div class="container">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Erro</h4>
                <a href="javascript: history.go(-1)" class="close">
                    <span aria-hidden="true">x</span><span></span>
                </a>
            </div>
            <div class="modal-body">
                <p>Mensagem:</p>
                <p class="modal-title text-danger">@Model.Message</p>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>