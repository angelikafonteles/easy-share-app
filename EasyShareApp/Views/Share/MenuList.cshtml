@model EasyShareApp.Models.Register


@{ ViewData["Title"] = "MenuList"; }

<h2>Menu</h2>
<div>
    <p>
        <a asp-action="Upload" class="btn btn-primary" asp-route-id="@Model.Id"> Adicionar Arquivo</a>
        <a asp-action="DeleteForce" class="btn btn-danger" asp-route-id="@Model.Id">Apagar Tudo</a>
        <a asp-action="ConfirmationPage" type="button" class="btn btn-outline-secondary" asp-route-id="@Model.Id">Sair</a>
    </p>
</div>
<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr class="table-secondary">
                <th>
                    @Html.DisplayName("Nome do Documento")
                </th>
                <th>
                    @Html.DisplayName("Data/Hora de Expiração")
                </th>
                <th>
                    @Html.DisplayName("Anexo")
                </th>
            </tr>
        </thead>
        @if (Model.Documents.Any())
        {
            <tbody>

                @foreach (var item in Model.Documents)
                {
                    //FIXME
                    string date =  (item.InstantExpiration - (item.InstantExpiration.AddHours(3) - item.InstantExpiration.AddMilliseconds(0.1))).ToString();

                    <tr class="table-info">
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayName(date)
                            <a asp-action="Edit" class="btn btn-default" asp-route-id="@item.Id">Editar</a>
                            <a asp-action="Delete" class="btn btn-default" asp-route-id="@item.Id">Apagar</a>
                        </td>
                        <td>

                            @if (item.Attachment == null)
                            {
                                <a asp-action="Upload" class="btn btn-default" asp-route-id="@item.Id">Upload</a>}
                            @if (item.Attachment != null)
                            {
                                <form asp-action="Download" asp-route-id="@item.Id">
                                <input type="submit" class="btn btn-default" value="Download" />
                                </form>}
                        </td>
                    </tr>
                }
            </tbody>
        }
    </table>
        
</div>
<div>
    <p>
    </p>
</div>